# 環境変数テンプレート
# このファイルを.env.localにコピーして使用してください
# cp .env.example .env.local

# ========================================
# Phase 1: 基本設定（現在使用中）
# ========================================

# アプリケーション設定
NEXT_PUBLIC_APP_NAME=モバイル献立アプリ
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ========================================
# Phase 2: AI/LLM連携（準備用）
# ========================================

# OpenAI API
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# キャッシュ用Redis（オプション）
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=your-redis-token

# データベース（オプション）
DATABASE_URL=postgresql://user:password@localhost:5432/kondate_db

# ========================================
# Phase 3: カメラ・画像認識（準備用）
# ========================================

# Google Cloud Vision API
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEYFILE=path/to/keyfile.json
GOOGLE_CLOUD_VISION_API_KEY=your-api-key

# AWS Rekognition（代替案）
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-northeast-1

# ========================================
# Phase 4: 外部連携（準備用）
# ========================================

# Google OAuth
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URL=http://localhost:3000/api/auth/callback/google

# LINE Messaging API
LINE_CHANNEL_SECRET=your-channel-secret
LINE_CHANNEL_ACCESS_TOKEN=your-access-token
LINE_WEBHOOK_URL=https://your-app.com/api/line/webhook

# Firebase（認証・プッシュ通知用）
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-app.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
FIREBASE_ADMIN_SDK_KEY=your-admin-sdk-key

# 外部レシピAPI
RAKUTEN_APP_ID=your-rakuten-app-id
COOKPAD_API_KEY=your-cookpad-api-key

# ========================================
# セキュリティ設定
# ========================================

# 暗号化キー（32バイトのランダム文字列）
ENCRYPTION_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# JWT秘密鍵
JWT_SECRET=your-super-secret-jwt-key

# APIレート制限
RATE_LIMIT_WINDOW=60000  # ミリ秒
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# モニタリング・分析（オプション）
# ========================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry（エラートラッキング）
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_AUTH_TOKEN=your-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=mobile-kondate

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# ========================================
# 開発・デバッグ設定
# ========================================

# デバッグモード
DEBUG=false
VERBOSE_LOGGING=false

# APIモック（開発時）
USE_MOCK_API=false
MOCK_API_DELAY=1000

# ========================================
# デプロイメント設定
# ========================================

# Vercel
VERCEL_URL=https://your-app.vercel.app

# その他のホスティング
DEPLOY_URL=https://your-domain.com
CDN_URL=https://cdn.your-domain.com
